<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hx.ffmpegtool">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".app.ToolApp"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.main.MainActivity"
            android:configChanges="screenSize|keyboardHidden|orientation"
            android:launchMode="singleTask"
            android:theme="@style/full_screen_style">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.videoInfo.VideoInfoActivity"></activity>
        <activity android:name=".ui.videoWaterMark.VideoWaterMarkActivity"></activity>
        <activity android:name=".ui.videocut.VideoCutActivity"></activity>
        <activity android:name=".ui.videoConnect.VideoConnectActivity"></activity>
        <activity android:name=".ui.videoResize.VideoResizeActivity"></activity>
    </application>

</manifest>