<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.hx.ffmpegtool.ui.videoConnect.VideoConnectActivity">
    <com.hx.steven.component.WxActionBar
        android:id="@+id/video_connect_bar"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:wxleftIcon="@drawable/ic_back"
        app:wxtitleString="视频合并">
    </com.hx.steven.component.WxActionBar>
    <TextView
        android:id="@+id/video_connect_videobtn"
        android:layout_width="@dimen/x300"
        android:layout_height="@dimen/x50"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/choose_videobg"
        android:gravity="center"
        android:text="选取视频"
        android:textSize="@dimen/x24"/>

    <android.support.v7.widget.RecyclerView
        android:layout_weight="1"
        android:id="@+id/video_connect_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/video_connect_button"
        android:layout_width="@dimen/x360"
        android:layout_height="@dimen/x60"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="@dimen/x23"
        android:background="@drawable/choose_videobg"
        android:enabled="true"
        android:gravity="center"
        android:text="开始合并视频"
        android:textStyle="bold"
        android:textSize="@dimen/x28"/>
</LinearLayout>
