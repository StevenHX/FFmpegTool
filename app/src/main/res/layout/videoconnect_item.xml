<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x216"
    android:paddingTop="@dimen/x16">

    <ImageView
        android:id="@+id/video_connect_item_image"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/x200"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/video_connect_item_close"
        android:layout_width="@dimen/x46"
        android:layout_height="@dimen/x46"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/video_connect_item_image"
        app:layout_constraintTop_toTopOf="@+id/video_connect_item_image"
        app:srcCompat="@drawable/input_del" />
</android.support.constraint.ConstraintLayout>